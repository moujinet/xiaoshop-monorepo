import type { I{{ modelName }}Info, I{{ modelName }}List } from '@xiaoshop/shared'

import { objectToDict, pipeDict } from '~/utils/transformer'

import { {{ modelName }}Entity } from './entity'

/**
  * Transform entities to list
  */
export function to{{ modelName }}List({{ lowerCase model }}s: {{ modelName }}Entity[]) {
  return pipeDict<I{{ modelName }}List>({{ model }}s, [
    row => objectToDict(row, '%name%', %DICT%),
  ])
}

/**
  * Transform entity
  */
export function to{{ modelName }}Info({{ lowerCase model }}: {{ modelName }}Entity) {
  return objectToDict({{ lowerCase model }}, '%name%', %DICT%) as I{{ modelName }}Info
}
