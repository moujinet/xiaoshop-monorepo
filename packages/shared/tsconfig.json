{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/modules/*"],
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    },
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"]
}
