{
  "testRegex": ".test.ts$",
  "testEnvironment": "node",
  "testTimeout": 5000,
  "openHandlesTimeout": 5000,
  "prettierPath": "./node_modules/prettier-2/index.js",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "modulePathIgnorePatterns": [
    "bin/.*",
    "dist/.*",
    "logs/.*",
    "public/.*",
    "node_modules/.*"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/modules/$1",
    "~~/(.*)": "<rootDir>/$1",
    "~/(.*)": "<rootDir>/src/$1"
  },
  "verbose": true
}
